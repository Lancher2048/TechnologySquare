    <section>

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="main-form">
            <h4>欢迎登录</h4>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="tab-title">
                <div class='normalInput fieldInput'>
                    @*<label asp-for="Email" class="col-md-2 control-label"></label>*@
                    <input asp-for="Email" class="inp-focus" placeholder='请输入用户名' autocomplete='off'/>
                    <span asp-validation-for="Email" class="inp-focus"></span>
                    </div>
                </div>
            <div class="tab-title">
                <div class='normalInput fieldInput'>
                    @*<label asp-for="Password" class="col-md-2 control-label"></label>*@
                    <input asp-for="Password" class="inp-focus" placeholder='请输入密码' autocomplete='off'/>
                    <span asp-validation-for="Password" class="inp-focus"></span>
                </div>
            </div>
            <div class='rememberField'>
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>


            <button type="submit" class="fullBtnBlue" >登录</button>

            <p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="linkAGray">注册</a>
            </p>
            @*<p>
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>*@
        </form>

    </section>
